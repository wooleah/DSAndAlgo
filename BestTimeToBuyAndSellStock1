// Iterative - beats 70% runtime

function sol(prices) {
  let final = 0;
  let buyIndex = 0;
  for (let i = 0; i < prices.length; ++i) {
    if (prices[i] < prices[buyIndex]) buyIndex = i;
    else if (prices[buyIndex] >= prices[i]) continue;

    final = Math.max(final, prices[i] - prices[buyIndex]);
  }

  return final;
}

sol([7, 5, 3, 4])
